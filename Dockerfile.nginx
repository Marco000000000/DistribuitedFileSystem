FROM fabiocicerchia/nginx-lua


# Create directories for Nginx configuration and Lua scripts
RUN mkdir -p /etc/nginx/lua-scripts

# Copy Nginx configuration file
COPY nginx.conf /etc/nginx/nginx.conf

# Copy Lua scri

# Copy the Lua script
COPY lua-scripts/ /etc/nginx/lua-scripts
# Expose port 80
EXPOSE 80

# CMD to start Nginx in the foreground
CMD ["nginx", "-g", "daemon off;"]
